<samples:BaseSamplePage
    xmlns:samples="using:AIDevGallery.Samples"
    x:Class="AIDevGallery.Samples.OpenSourceModels.FacialAttributeDetection.CompareFaces"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

  <ScrollViewer>
    <Grid Padding="20">
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
      </Grid.RowDefinitions>

      <Grid Grid.Row="0" ColumnSpacing="24">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="1*" />
          <ColumnDefinition Width="Auto" />
          <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <!-- Left Image and Upload -->
        <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="8">
          <Image
            x:Name="LeftImage"
            Stretch="Uniform"
            MaxWidth="300"
            MaxHeight="400"
            HorizontalAlignment="Center"
            VerticalAlignment="Center" />
          <Button
            x:Name="UploadLeftButton"
            Content="Select Left Image"
            Click="UploadLeftButton_Click"
            Style="{StaticResource AccentButtonStyle}" />
        </StackPanel>

        <!-- Result and Generate Button -->
        <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="8">
          <TextBlock
            x:Name="LikenessResult"
            Text="Similarity: --"
            FontSize="20"
            TextAlignment="Center"
            HorizontalAlignment="Center"
            Margin="10" />
          <Button
            x:Name="GenerateComparisonButton"
            Content="Generate Similarity Score"
            Click="GenerateComparisonButton_Click"
            Style="{StaticResource AccentButtonStyle}"
            IsEnabled="False" />
        </StackPanel>

        <!-- Right Image and Upload -->
        <StackPanel Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="8">
          <Image
            x:Name="RightImage"
            Stretch="Uniform"
            MaxWidth="300"
            MaxHeight="400"
            HorizontalAlignment="Center"
            VerticalAlignment="Center" />
          <Button
            x:Name="UploadRightButton"
            Content="Select Right Image"
            Click="UploadRightButton_Click"
            Style="{StaticResource AccentButtonStyle}" />
        </StackPanel>
      </Grid>

      <!-- Loader Below Everything -->
      <ProgressRing
        x:Name="Loader"
        Grid.Row="1"
        IsActive="False"
        Visibility="Collapsed"
        HorizontalAlignment="Center"
        Margin="20" />
    </Grid>
  </ScrollViewer>
</samples:BaseSamplePage>
